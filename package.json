{
  "name": "jwt-pizza-service",
  "description": "Backend service for making JWT pizzas",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --detectOpenHandles",
    "lint": "eslint src/**/*.js --fix",
    "start": "cd src && node index.js"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": ["/node_modules/", "testConfig.js"],
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "testEnvironment": "node",
    "setupFiles": ["<rootDir>/jest.setup.js"]
  }
}